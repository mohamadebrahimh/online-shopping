@model List<Businessdevweb.Models.Slider>

@{
    ViewBag.Title = "مدیریت اسلایدر ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Title -->
<div class="row heading-bg pull-left rtl">

    <!-- Breadcrumb -->
    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
        <ol class="breadcrumb">
            <li></li>
            <li><a href="@Url.Action("Index","Dashboard",new { area = "Admin" })"><span>داشبورد</span></a></li>
     
            <li class="active"><span>@ViewBag.Title</span></li>
        </ol>
    </div>
    <!-- /Breadcrumb -->
</div>
<!-- /Title -->
<!-- Row -->
<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">@ViewBag.Title</h6>
                </div>
                <div class="pull-right dt-buttons">
                    <a class="dt-button" href="@(Url.Action("Create","Sliders",new { Area="Admin"}))">
                        @("افزودن اسلایدر")
                    </a>
                </div>

                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="table-wrap">
                        <div class="table-responsive">
                            <table id="datable_1" class="table table-hover display  pb-30">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عنوان</th>
                                        <th>بنر ها</th>
    
                                        <th>عملیات</th>

                                    </tr>
                                </thead>

                                <tbody>

                                    @{ if (Model!=null&&Model.Count > 0)
                                        {


                                            int count = 0;
                                            foreach (var item in Model)
                                            {
                                                <tr id="tr@(item.Id)">
                                                    <td>@(++count)</td>
                                        
                                                    <td>@item.Title</td>
                                                    <td>
                                                        <a href="@Url.Action("Index", "SliderImages", new { area = "Admin", id = item.Id })" class="btn btn-default  btn-sm" title="بنر های  @item.Title">
                                                            بنر ها (@(item.SliderImages.Count))
                                                        </a>
                                                    </td>
                                           
                                                    <td>
                                                        <a href="@Url.Action("Edit", "Sliders", new { area = "Admin", id = item.Id })" class="btn btn-primary btn-icon-anim btn-circle btn-sm" title="ویرایش @item.Title"><i class="glyphicon glyphicon-edit"></i></a>

                                                        <a action="/Sliders/Delete" data-area="Admin" data-id="@item.Id" success-func="deleteSuccess"
                                                           ajax-alert="true" alert-cancel="نه، لغو بشه" data-method="post" alert-confirm="بله، حذف بشه"
                                                           alert-title="حذف  را تایید می کنید!" alert-type="warning"
                                                           alert-text="در صورت تایید حذف،  @item.Title قابل بازیابی نمی باشد!"
                                                           class="ajaxAction btn btn-danger btn-icon-anim btn-circle btn-sm" title="حذف @item.Title"><i class="glyphicon glyphicon-remove"></i></a>

      


                                                    </td>
                                                </tr>

                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center center">
                                                    اسلایدری یافت نشد
                                                    <a class="btn btn-primary" href="@(Url.Action("Create","Sliders",new { Area="Admin"}))">
                                                        @("افزودن اسلایدر")
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Row -->
@section Styles{
    <!-- Data table CSS -->
    <link href="~/Content/lib/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />


    <link href="~/Content/lib/sweetalert/dist/sweetalert.css" rel="stylesheet" type="text/css">
}
@section Scripts{
    <script>

    </script>
    <script>

        function deleteSuccess(data) {
     
            //examples
            if (data.type == "success") {
                $("#tr" + data.id).fadeOut();
            } else {
                return false;
            }
            return false;
        }

    </script>

    <!-- Data table JavaScript -->
    <script src="~/Content/lib/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/js/dataTables-data.js"></script>

    <script src="~/Content/lib/sweetalert/dist/sweetalert.min.js"></script>

    <script src="~/Content/js/AjaxHelper.js"></script>

   
}
