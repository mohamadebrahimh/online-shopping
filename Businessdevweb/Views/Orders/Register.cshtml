@model Businessdevweb.Models.Order
@{
    ViewBag.Title = "ثبت سفارش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var shoppingCart = Session["ShoppingCart"] == null ? null : Session["ShoppingCart"] as List<Businessdevweb.Models.ShopingCart>;
}
<div class="wrapper default shopping-page">
    <main class="cart-page default">
        <div class="container">
            <div class="row">
                <div class="cart-page-content col-xl-9 col-lg-8 col-md-12 order-1">

                    <div class="cart-page-title">
                        <h1> آدرس تحویل سفارش</h1>
                    </div>
                    <section class="page-content default">
                        <div class="address-section">
                            <div class="checkout-contact">
                                <div class="checkout-contact-content">
                                    <form class="form-account" id="orderRegister" method="post" action="@Url.Action("Register", "Orders")">
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-account-title">آدرس کامل گیرنده</div>
                                                <div class="form-account-row">
                                                    @Html.TextBoxFor(m => m.Address, new { @class = "input-field text-right", @type = "text", @placeholder = "آدرس را وارد نمایید" })

                                                </div>
                                            </div>


                                            <div class="col-sm-12 col-md-6">
                                                <div class="form-account-title">شماره موبایل</div>
                                                <div class="form-account-row">
                                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "input-field ", @type = "text", @placeholder = "شماره موبایل خود را وارد نمایید" })

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                                <form method="post" id="shipping-data-form">
                                    <div class="headline">
                                        <span>انتخاب نحوه ارسال</span>
                                    </div>
                                    <div class="checkout-shipment">
                                        <div class="radio">
                                            <input type="radio" name="radio1" id="radio1" value="option1">
                                            <label for="radio1">
                                                عادی
                                            </label>
                                        </div>

                                        <div class="radio">
                                            <input type="radio" name="radio1" id="radio2" value="option2" checked="">
                                            <label for="radio2">
                                                سریع‌ (مرسوله‌ها در سریع‌ترین زمان ممکن ارسال می‌شوند)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="headline">
                                        <span>مرسوله ۱ از ۱</span>
                                    </div>
                                    <div class="checkout-pack">
                                        <section class="products-compact">
                                            <div class="box">
                                                <div class="row">
                                                    @{
                                                        if (shoppingCart != null && shoppingCart.Count() > 0)
                                                        {
                                                            foreach (var item in shoppingCart)
                                                            {
                                                                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                                                    <div class="product-box-container">
                                                                        <div class="product-box product-box-compact">
                                                                            <a class="product-box-img">
                                                                                <img src="~/Content/uploadFiles/Products/@item.ImageFile">
                                                                            </a>
                                                                            <div class="product-box-title">
                                                                                @item.ProductTitle
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                    }


                                                </div>
                                            </div>
                                        </section>
                                        <div class="row">
                                            <div class="checkout-time-table checkout-time-table-time">
                                                <span class="checkout-additional-options-checkbox-image"></span>
                                                <div>
                                                    <div class="checkout-time-table-title-bar checkout-time-table-title-bar-city">
                                                        بازه تحویل سفارش: زمان تقریبی تحویل از
                                                        <span>  @(Businessdevweb.Models.PersianDateExtensionMethods.ToPeString(DateTime.Now, " dd MMMM"))</span>
                                                        تا
                                                        <span>@(Businessdevweb.Models.PersianDateExtensionMethods.ToPeString(DateTime.Now.AddDays(4), " dd MMMM"))</span>
                                                    </div>
                                                    <ul class="checkout-time-table-subtitle-bar">
                                                        <li>شیوه ارسال : پست پیشتاز با ظرفیت اختصاصی </li>
                                                        <li>
                                                            هزینه ارسال:
                                                            <span class="">رایگان</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="headline">
                                        <span>صدور فاکتور</span>
                                    </div>
                                    <div class="checkout-invoice">
                                        <div class="checkout-invoice-headline">
                                            <div class="form-account-agree">
                                                <label class="checkbox-form checkbox-primary">
                                                    <input type="checkbox" checked="checked" id="agree">
                                                    <span class="checkbox-check"></span>
                                                </label>
                                                <label for="agree">درخواست ارسال فاکتور خرید</label>
                                            </div>
                                        </div>
                                    </div>
                                </form>
</section>
                </div>
                <aside class="cart-page-aside col-xl-3 col-lg-4 col-md-6 center-section order-2">
                    <div class="checkout-aside">
                        <div class="checkout-summary">
                            <div class="checkout-summary-main">
                                <ul class="checkout-summary-summary">
                                    <li><span>مبلغ کل (@shoppingCart.Sum(m => m.Qty) کالا)</span><span>@shoppingCart.Sum(m => m.Total) ريال</span></li>
                                    <li>
                                        <span>هزینه ارسال</span>
                                        <span>
                                            رایگان

                                        </span>
                                    </li>
                                </ul>
                                <div class="checkout-summary-devider">
                                    <div></div>
                                </div>
                                <div class="checkout-summary-content">
                                    <div class="checkout-summary-price-title">مبلغ قابل پرداخت:</div>
                                    <div class="checkout-summary-price-value">
                                        <span class="checkout-summary-price-value-amount">@shoppingCart.Sum(m => m.Total)</span>ريال
                                    </div>
                                    <a href="#" class="selenium-next-step-shipping">
                                        <div class="parent-btn">
                                            <button type="button" onclick="$('#orderRegister').submit();" class="dk-btn dk-btn-info">
                                                ادامه ثبت سفارش
                                                <i class="now-ui-icons shopping_basket"></i>
                                            </button>
                                        </div>
                                    </a>
                                    <div>
                                        <span>
                                            کالاهای موجود در سبد شما ثبت و رزرو نشده‌اند، برای ثبت سفارش مراحل بعدی
                                            را تکمیل
                                            کنید.
                                        </span>
                                        <span class="wiki wiki-holder">
                                            <span class="wiki-sign"></span>
                                            <div class="wiki-container is-right">
                                                <div class="wiki-arrow"></div>
                                                <p class="wiki-text">
                                                    محصولات موجود در سبد خرید شما تنها در صورت ثبت و پرداخت سفارش
                                                    برای شما رزرو
                                                    می‌شوند. در
                                                    صورت عدم ثبت سفارش، @ViewBag.LogoTitle هیچگونه مسئولیتی در قبال تغییر
                                                    قیمت یا موجودی
                                                    این کالاها
                                                    ندارد.
                                                </p>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="checkout-feature-aside">
                            <ul>
                                <li class="checkout-feature-aside-item checkout-feature-aside-item-guarantee">
                                    هفت روز
                                    ضمانت تعویض
                                </li>
                                <li class="checkout-feature-aside-item checkout-feature-aside-item-cash">
                                    پرداخت در محل با
                                    کارت بانکی
                                </li>
                                <li class="checkout-feature-aside-item checkout-feature-aside-item-express">
                                    تحویل اکسپرس
                                </li>
                            </ul>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </main>

    </div>