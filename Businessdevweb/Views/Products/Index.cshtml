@model Businessdevweb.Models.Product

@{

    ViewBag.Title = Model.FirstTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="single-product default">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav>
                    <ul class="breadcrumb">
                        <li>
                            <a href="~/"><span>@ViewBag.SiteTitle</span></a>
                        </li>
                        <li>
                            <span> @ViewBag.Title</span>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <article class="product">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="product-gallery default">

                                @{
                                    if (Model.ProductImages.Count() > 0)
                                    {
                                        var i = 0;
                                        var defaultImg = Model.ProductImages.OrderByDescending(m => m.InsertTime).FirstOrDefault();
                                        <img class="zoom-img" id="img-product-zoom" src="~/Content/uploadFiles/ProductImages/@defaultImg.Name" data-zoom-image="/Content/uploadFiles/ProductImages/@defaultImg.Name" width="411" />
                                        <div id="gallery_01f" style="width:500px;float:left;">
                                            <ul class="gallery-items">
                                                @foreach (var item in Model.ProductImages)
                                                {

                                                    <li>
                                                        <a href="#" class="elevatezoom-gallery @(i == 0 ? "active" : "")" data-update="" data-image="/Content/uploadFiles/ProductImages/@item.Name" data-zoom-image="/Content/uploadFiles/ProductImages/@item.Name">
                                                            <img src="/Content/uploadFiles/ProductImages/@item.Name" width="100" />
                                                        </a>
                                                    </li>
                                                    i++;
                                                }
                                            </ul>
                                        </div>
                                    }
                                }



                            </div>
                            <ul class="gallery-options">
                                <li>
                                    <button class="add-favorites"><i class="fa fa-heart"></i></button>
                                    <span class="tooltip-option">افزودن به علاقمندی</span>
                                </li>
                                <li>
                                    <button data-toggle="modal" data-target="#myModal"><i class="fa fa-share-alt"></i></button>
                                    <span class="tooltip-option">اشتراک گذاری</span>
                                </li>
                            </ul>
                            <!-- Modal Core -->
                            <div class="modal-share modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">اشتراک گذاری</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form class="form-share">
                                                <div class="form-share-title">اشتراک گذاری در شبکه های اجتماعی</div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <ul class="btn-group-share">
                                                            <li><a href="#" class="btn-share btn-share-twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                                            <li><a href="#" class="btn-share btn-share-facebook" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                                            <li><a href="#" class="btn-share btn-share-google-plus" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="form-share-title">ارسال به ایمیل</div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <label class="ui-input ui-input-send-to-email">
                                                            <input class="ui-input-field" type="email" placeholder="آدرس ایمیل را وارد نمایید.">
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <button class="btn-primary">ارسال</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <form class="form-share-url default">
                                                <div class="form-share-url-title">آدرس صفحه</div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <label class="ui-url">
                                                            <input class="ui-url-field" value="https://www.digikala.com">
                                                        </label>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal Core -->
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="product-title default">
                                <h1>
                                    @Model.FirstTitle
                                    <span>@Model.SecondTitle</span>
                                </h1>
                            </div>
                            <div class="product-directory default">
                                <ul>
                                    <li>
                                        <span>برند</span> :
                                        <span class="product-brand-title">@Model.Brand</span>
                                    </li>
                                    <li>
                                        <span>دسته‌بندی</span> :
                                        <a href="#" class="btn-link-border">
                                            @Model.Category.Title
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            @*<div class="product-variants default">
                                    <span>انتخاب رنگ: </span>
                                    <div class="radio">
                                        <input type="radio" name="radio1" id="radio1" value="option1">
                                        <label for="radio1">
                                            خاکستری
                                        </label>
                                    </div>

                                    <div class="radio">
                                        <input type="radio" name="radio1" id="radio2" value="option2" checked="">
                                        <label for="radio2">
                                            نقره ای
                                        </label>
                                    </div>

                                </div>*@
                            <div class="product-guarantee default">
                                <i class="fa fa-check-circle"></i>
                                <p class="product-guarantee-text">گارانتی اصالت و سلامت فیزیکی کالا</p>
                            </div>
                            @*<div class="product-delivery-seller default">
                                    <p>
                                        <i class="now-ui-icons shopping_shop"></i>
                                        <span>فروشنده:‌</span>
                                        <a href="#" class="btn-link-border">ناسا</a>
                                    </p>
                                </div>*@
                            <div class="price-product defualt">
                                <div class="price-value">
                                    <span>@(Model.IsDiscount ? Model.DiscountPercent > 0 ? Model.PriceWithDiscount : Model.Price : Model.Price)</span>
                                    <span class="price-currency">ريال</span>
                                </div>
                                <div class="price-discount" data-title="تخفیف">
                                    <span>
                                        @Model.DiscountPercent
                                    </span>
                                    <span>%</span>
                                </div>
                            </div>
                            <div class="product-add default">
                                <div class="parent-btn">
                                    <a  href="@Url.Action("AddToCart","Products",new {returnUrl=Request.Url.LocalPath, id=Model.Id})" class="dk-btn dk-btn-info">
                                        افزودن به سبد خرید
                                        <i class="now-ui-icons shopping_cart-simple"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-12 center-breakpoint">
                            <div class="product-guaranteed default">
                                بیش از ۱۸۰ نفر از خریداران این محصول را پیشنهاد داده‌اند
                            </div>
                            @{
                                if (Model.ProductFeatures.Count() > 0)
                                {
                                    <div class="product-params default">
                                        <ul data-title="ویژگی‌های محصول">
                                            @foreach (var item in Model.ProductFeatures.Take(5).ToList())
                                            {
                                                <li>
                                                    <span>@item.Name: </span>
                                                    <span> @item.Value</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                </article>
            </div>
        </div>
        <div class="row">
            <div class="container">
                <div class="col-12 default no-padding">
                    <div class="product-tabs default">
                        <div class="box-tabs default">
                            <ul class="nav" role="tablist">
                                <li class="box-tabs-tab">
                                    <a class="active" data-toggle="tab" href="#desc" role="tab" aria-expanded="true">
                                        <i class="now-ui-icons objects_umbrella-13"></i> توضیحات
                                    </a>
                                </li>
                                <li class="box-tabs-tab">
                                    <a data-toggle="tab" href="#params" role="tab" aria-expanded="false">
                                        <i class="now-ui-icons shopping_cart-simple"></i> مشخصات
                                    </a>
                                </li>
                                <li class="box-tabs-tab">
                                    <a data-toggle="tab" href="#comments" role="tab" aria-expanded="false">
                                        <i class="now-ui-icons shopping_shop"></i> نظرات کاربران
                                    </a>
                                </li>
               
                            </ul>
                            <div class="card-body default">
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-pane active" id="desc" role="tabpanel" aria-expanded="true">
                                        <article>
                                            <h2 class="param-title">
                                                نقد و بررسی تخصصی
                                                <span>@Model.FirstTitle</span>
                                            </h2>
                                            <div class="parent-expert default">
                                                <div class="content-expert">
                                                    <p>
                                                        @Model.Description
                                                    </p>
                                                </div>
                                                <div class="sum-more">
                                                    <span class="show-more btn-link-border">
                                                        نمایش بیشتر
                                                    </span>
                                                    <span class="show-less btn-link-border">
                                                        بستن
                                                    </span>
                                                </div>
                                                <div class="shadow-box"></div>
                                            </div>

                                        </article>
                                    </div>
                                    <div class="tab-pane params" id="params" role="tabpanel" aria-expanded="false">
                                        <article>
                                            <h2 class="param-title">
                                                مشخصات فنی
                                                <span>@Model.SecondTitle</span>
                                            </h2>
                                            @{
                                                if (Model.ProductFeatures.Count() > 0)
                                                {
                                                    <section>
                                                        <h3 class="params-title">مشخصات کلی</h3>
                                                        <ul class="params-list">
                                                            @foreach (var item in Model.ProductFeatures)
                                                            {
                                                                <li>
                                                                    <div class="params-list-key">
                                                                        <span class="block">@item.Name</span>
                                                                    </div>
                                                                    <div class="params-list-value">
                                                                        <span class="block">
                                                                            @item.Value
                                                                        </span>
                                                                    </div>
                                                                </li>

                                                            }

                                                        </ul>
                                                    </section>

                                                }
                                            }

                                        </article>
                                    </div>
                                    <div class="tab-pane" id="comments" role="tabpanel" aria-expanded="false">
                                        <article id="sendComment">
                                            <h2 class="param-title">
                                                افزودن نظر
                                                <span>نظر خود را در مورد محصول مطرح نمایید</span>
                                            </h2>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                        <form method="post" action="@Url.Action("AddComment","Products")" class="comment" >
                                            <a id="replyMsg" class="text-primary reply-message" style="display:none" data-replyId="">
                                              
                                            </a>
                                                    <textarea name="Message" id="MessageComment" class="form-control" placeholder="نظر" rows="5"></textarea>
                                                    <input type="hidden" name="ReplyId" id="ReplyId" value="" />
                                                    <input type="hidden" name="ProductId" value="@Model.Id" />
                                                    <input type="hidden" name="returnUrl" value="@Url.Action("Index","Products",new { id=Model.Name})" />
                                                    <button id="replyBtn" type="submit" class="btn btn-default">ارسال نظر</button>
</form>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Login","Account",new { returnUrl=Url.Action("Index","Products",new { id=Model.Name})})" class="text-primary">
                                                برای ثبت نظر خود ابتدا لازم است وارد سایت شوید
                                                </a>
                                            }



                                            <h2 class="param-title" style="padding-top:50px">
                                                نظرات کاربران
                                                <span>@Model.Comments.Count()</span>
                                            </h2>
                                            @{
                                                if (Model.Comments.Count() > 0)
                                                {

                                                    <div class="comments-area default">
                                                        <ol class="comment-list">
                                                            @foreach (var item in Model.Comments.OrderByDescending(m => m.InsertTime))
                                                            {
                                                                <!-- #comment-## -->
                                                                <li id="li@(item.Id)">
                                                                    <div class="comment-body">
                                                                        <div class="comment-author">
                                                                            @if (item.ApplicationUser.ImageFile != null)
                                                                            {
                                                                                <img alt="" src="~/Content/uploadFiles/Users/@item.ApplicationUser.ImageFile" class="avatar">
                                                                            }
                                                                            else
                                                                            {
                                                                                <img alt="" src="~/Content/assets/img/default-avatar.png" class="avatar">
                                                                            }
                                                                            <cite class="fn">@item.ApplicationUser.FirstName   @item.ApplicationUser.LastName</cite>

                                                                            @if (item.ReplyId == null)
                                                                            {
                                                                                <span class="says">گفت:</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="says">در پاسخ گفت:</span>
                                                                            }


                                                                        </div>

                                                                        <div class="commentmetadata">
                                                                            <a href="#">
                                                                                @(Businessdevweb.Models.PersianDateExtensionMethods.ToPeString(item.InsertTime, "dddd, dd MMMM, yyyy در hh:mm"))
                                                                            </a>
                                                                        </div>
                             
                                                                        <p>
                                                                            @if (item.ReplyId != null)
                                                                            {
                                                                            <a class="text-primary reply-message" data-replyId="@item.Id">
                                                                                <span style='color:black !important'>پاسخ نظر  @item.Reply.ApplicationUser.FirstName @item.Reply.ApplicationUser.LastName</span>
                                                                                @item.Reply.Message.Substring(0, item.Reply.Message.Length > 30 ? 30 : item.Reply.Message.Length)
                                                                            :</a>

                                                                            }
                                                                            <br />

                                                                            @item.Message
                                                                        </p>
                                                                        @if (User.Identity.IsAuthenticated)
                                                                        {
                                                                            <div class="reply">
                                                                                <a class="comment-reply-link" data-replyId="@item.Id" data-replyMsg="@item.Message.Substring(0, item.Message.Length>30?30:item.Message.Length)">پاسخ</a>
                                                                            </div>

                                                                        }

                                                                    </div>
                                                                </li>
                                                                <!-- #comment-## -->
                                                            }


                                                        </ol>
                                                    </div>
                                                }
                                            }

                                        </article>
                                    </div>
                           
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script src="~/Content/assets/js/plugins/jquery.ez-plus.js" type="text/javascript"></script>
    <script>
        var elements = document.querySelectorAll(".reply>.comment-reply-link");
        $("#replyMsg").fadeOut();
        for (let i = 0; i < elements.length; i++) {
            elements[i].addEventListener("click",
                function (eve) {
                    let el = eve.currentTarget;
                    let replyid = el.getAttribute("data-replyId");
                    let replyMsg = el.getAttribute("data-replyMsg");

                    $("#ReplyId").val(replyid);
                    $("#replyMsg").fadeIn();
                    $("#replyMsg").attr("data-replyId", replyid);
                    $("#replyMsg").html("  <span style='color:black !important'>درحال پاسخ به نظر </span>"+replyMsg);
                    $("#replyBtn").val("اسال پاسخ");
                    $("#MessageComment").focus();
                       $('html, body').animate({
        scrollTop: $("#sendComment").offset().top
                       }, 2000);
                        eve.preventDefault();

                });
        }
        var elements = document.querySelectorAll("a.reply-message");
        for (let i = 0; i < elements.length; i++) {
            elements[i].addEventListener("click",
                function (eve) {
                    let el = eve.currentTarget;
                    let replyid = el.getAttribute("data-replyId");
                  
                    $('html, body').animate({
                        scrollTop: $("#li" + replyid).offset().top
                       }, 2000);
                        eve.preventDefault();

                });
        }
    </script>
}