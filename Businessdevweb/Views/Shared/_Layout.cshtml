
@{ 
     ViewBag.ShoppingCart = Session["ShoppingCart"]==null?null: Session["ShoppingCart"] as List<Businessdevweb.Models. ShopingCart>;
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="@ViewBag.MetaDescription">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>

        @ViewBag.Title
    </title>

    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no'
          name='viewport' />

    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="~/Content/assets/fonts/font-awesome/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/now-ui-kit.css" rel="stylesheet" />
    <link href="~/Content/assets/css/plugins/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/assets/css/plugins/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/main.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="index-page sidebar-collapse">

    <!-- responsive-header -->

    <div class="wrapper default">

        <!-- header -->
        <header class="main-header default">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-4 col-5">
                        <div class="logo-area default">
                            <a href="~/">
                                <img src="~/Content/uploadFiles/Site/@ViewBag.LogoFile" alt="@ViewBag.LogoTitle">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-5 col-sm-8 col-7">
                        <div class="search-area default">
                            <form action="" class="search">
                                <input type="text" placeholder="نام کالا، برند و یا دسته مورد نظر خود را جستجو کنید…">
                                <button type="submit"><img src="~/Content/assets/img/search.png" alt=""></button>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-12">

                        <div class="user-login dropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="#" class="btn btn-neutral dropdown-toggle" data-toggle="dropdown"
                                   id="navbarDropdownMenuLink1">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                                    <div class="dropdown-item">
                                        <a href="@Url.Action("Index","Account",new { area=""})" class="btn btn-info">پروفایل</a>
                                    </div>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="dropdown-item font-weight-bold">
                                            <a class="register" href="@Url.Action("Index","Home",new { area="Admin"})"> <span>ورود به پنل ادمین</span></a>
                                        </div>
                                    }
                                    <div class="dropdown-item font-weight-bold">
                                        <form action="@Url.Action("LogOff","Account")" method="post" id="logOff-form">
                                            @Html.AntiForgeryToken()
                                        </form>
                                        <a onclick="$('#logOff-form').submit();">
                                            <i class="zmdi zmdi-power"></i> <span>خروج</span>
                                        </a>
                                    </div>
                                </ul>
                            }
                            else
                            {
                                <a href="#" class="btn btn-neutral dropdown-toggle" data-toggle="dropdown"
                                   id="navbarDropdownMenuLink1">
                                    ورود / ثبت نام
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                                    <div class="dropdown-item">
                                        <a href="@Url.Action("Login","Account",new { area=""})" class="btn btn-info">ورود به @ViewBag.LogoTitle</a>
                                    </div>
                                    <div class="dropdown-item font-weight-bold">
                                        <span>کاربر جدید هستید؟</span> <a class="register" href="@Url.Action("Register","Account",new { area=""})">ثبت‌نام</a>
                                    </div>
                                </ul>
                            }

                        </div>
                        <div class="cart dropdown">

                            <a href="#" class="btn dropdown-toggle" data-toggle="dropdown" id="navbarDropdownMenuLink1">
                                <i class="now-ui-icons shopping_cart-simple"></i>
                                سبد خرید
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink1">
                                @{
                                    var carts = ViewBag.ShoppingCart as List<Businessdevweb.Models.ShopingCart>;

                                    if (carts != null && carts.Count() > 0)
                                    {
                                        <li>
                                            <div class="basket-header">
                                                <div class="basket-total">
                                                    <span>مبلغ کل خرید:</span>
                                                    <span> @carts.Sum(m => m.Total)</span>
                                                    <span> ريال</span>
                                                </div>
                                    
                                            </div>
                                            <ul class="basket-list">
                                                @foreach (var item in carts)
                                                {
                                                    <li>
                                                        <div class="basket-item">
                                                            <a href="@Url.Action("DeleteItemCart","Products",new {returnUrl=Request.Url.LocalPath, id=item.ProductId})" class="basket-item-remove"></a>
                                                            <div class="basket-item-content">
                                                                <div class="basket-item-image">
                                                                    <img alt="" src="~/Content/uploadFiles/Products/@item.ImageFile">
                                                                </div>
                                                                <div class="basket-item-details">
                                                                    <div class="basket-item-title">
                                                                        @item.ProductTitle.Substring(0, item.ProductTitle.Length > 20 ? 20 : item.ProductTitle.Length)
                                                                    </div>
                                                                    <div class="basket-item-params">
                                                                        <div class="basket-item-props">
                                                                            <span> @item.Qty عدد</span>
                                                                            <span>@item.Total</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                }

                                            </ul>
                                            <a href="@Url.Action("Register","Orders")" class="basket-submit">ثبت سفارش</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <div class="basket-header">
                                                <div class="basket-total">
                                                    <span>مبلغ کل خرید:</span>
                                                    <span> 0</span>
                                                    <span> ريال</span>
                                                </div>

                                            </div>
                                            <ul class="basket-list">
                                                <li>
                                                    <a href="#" class="basket-item text-center">
                                                        خالی است
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    }


                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="main-menu">
                <div class="container">
                    <ul class="list float-right">
                        @{
                            var categories = (List<Businessdevweb.Models.ProductCategory>)ViewBag.Categories;
                            if (categories != null || categories.Count() > 0)
                            {
                                foreach (var item in categories.OrderBy(m => m.Position))
                                {
                                    if (item.Categories.Count > 0)
                                    {
                                        <li class="list-item list-item-has-children mega-menu mega-menu-col-5">
                                            <a class="nav-link" href="#">@item.Title</a>
                                            <ul class="sub-menu nav">
                                                @foreach (var child in item.Categories.OrderBy(m => m.Position))
                                                {
                                                    <li class="list-item @(child.IsEndChild?"":"list-item-has-children")">
                                                        @(child.IsEndChild ? "" : "<i class='now-ui-icons arrows-1_minimal-left'></i>")
                                                        <a class="main-list-item nav-link"
                                                           href="@(child.IsEndChild?Url.Action("Category","Products",new {area="",id=child.Name }):"#")">
                                                            @child.Title
                                                        </a>
                                                        @if (!child.IsEndChild && child.Categories.Count() > 0)
                                                        {
                                                            <ul class="sub-menu nav">

                                                                @foreach (var child2 in child.Categories.OrderBy(m => m.Position))
                                                                {
                                                                    <li class="list-item @(child2.IsEndChild?"":"list-item-has-children")">
                                                                        @(child2.IsEndChild ? "" : "<i class='now-ui-icons arrows-1_minimal-left'></i>")
                                                                        <a class="main-list-item nav-link"
                                                                           href="@(child2.IsEndChild?Url.Action("Category","Products",new {area="",id=child2.Name }):"#")">
                                                                            @child2.Title
                                                                        </a>
                                                                        @if (!child2.IsEndChild && child2.Categories.Count() > 0)
                                                                        {
                                                                            <ul class="sub-menu nav">

                                                                                @foreach (var child3 in child2.Categories.OrderBy(m => m.Position))
                                                                                {
                                                                                    <li class="list-item @(child3.IsEndChild ? "" : "")">
                                                                                        @(child3.IsEndChild ? "" : "")
                                                                                        <a class="main-list-item nav-link"
                                                                                           href="@(child3.IsEndChild ? Url.Action("Category", "Products", new { area = "", id = child3.Name }) : "#")">
                                                                                            @child3.Title
                                                                                        </a>
                                                                                    </li>
                                                                                }

                                                                            </ul>
                                                                        }
                                                                    </li>
                                                                }

                                                            </ul>
                                                        }

                                                    </li>
                                                }

                                            </ul>

                                        </li>
                                    }
                                    else
                                    {
                                        <li class="list-item">
                                            <a class="nav-link" href="@(item.IsEndChild? Url.Action("Category","Products",new { area="",id=item.Name}):"#")">@item.Title</a>
                                        </li>
                                    }
                                }
                            }
                        }


                        @*<li class="list-item amazing-item">
                                <a class="nav-link" href="#" target="_blank">شگفت‌انگیزها</a>
                            </li>*@
                    </ul>
                </div>
            </nav>
        </header>
        <!-- header -->



        @RenderBody()



        <footer class="main-footer default">
            <div class="back-to-top">
                <a href="#">
                    <span class="icon"><i class="now-ui-icons arrows-1_minimal-up"></i></span> <span>
                        بازگشت به
                        بالا
                    </span>
                </a>
            </div>
            <div class="container">
                <div class="footer-services">
                    <div class="row">
                        <div class="service-item col">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/svg/delivery.svg">
                            </a>
                            <p>تحویل اکسپرس</p>
                        </div>
                        <div class="service-item col">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/svg/contact-us.svg">
                            </a>
                            <p>پشتیبانی 24 ساعته</p>
                        </div>
                        <div class="service-item col">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/svg/payment-terms.svg">
                            </a>
                            <p>پرداخت درمحل</p>
                        </div>
                        <div class="service-item col">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/svg/return-policy.svg">
                            </a>
                            <p>۷ روز ضمانت بازگشت</p>
                        </div>
                        <div class="service-item col">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/svg/origin-guarantee.svg">
                            </a>
                            <p>ضمانت اصل بودن کالا</p>
                        </div>
                    </div>
                </div>
                <div class="footer-widgets">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="widget-menu widget card">
                                <header class="card-header">
                                    <h3 class="card-title">راهنمای خرید </h3>
                                </header>
                                <ul class="footer-menu">
                                    <li>
                                        <a href="#">نحوه ثبت سفارش</a>
                                    </li>
                                    <li>
                                        <a href="#">رویه ارسال سفارش</a>
                                    </li>
                                    <li>
                                        <a href="#">شیوه‌های پرداخت</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="widget-menu widget card">
                                <header class="card-header">
                                    <h3 class="card-title">خدمات مشتریان</h3>
                                </header>
                                <ul class="footer-menu">
                                    <li>
                                        <a href="#">پاسخ به پرسش‌های متداول</a>
                                    </li>
                                    <li>
                                        <a href="#">رویه‌های بازگرداندن کالا</a>
                                    </li>
                                    <li>
                                        <a href="#">شرایط استفاده</a>
                                    </li>
                                    <li>
                                        <a href="#">حریم خصوصی</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="widget-menu widget card">
                                <header class="card-header">
                                    <h3 class="card-title">با @ViewBag.LogoTitle</h3>
                                </header>
                                <ul class="footer-menu">
                                    <li>
                                        <a href="#">فروش </a>
                                    </li>
                                    <li>
                                        <a href="#">همکاری با سازمان‌ها</a>
                                    </li>
                                    <li>
                                        <a href="#">فرصت‌های شغلی</a>
                                    </li>
                                    <li>
                                        <a href="/ارتباط-باما">ارتباط باما</a>
                                    </li>
                                    <li>
                                        <a href="/درباره-ما">دربارها</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="newsletter">
                                <p>از تخفیف‌ها و جدیدترین‌های فروشگاه باخبر شوید:</p>
                                <form action="">
                                    <input type="email" class="form-control"
                                           placeholder="آدرس ایمیل خود را وارد کنید...">
                                    <input type="submit" class="btn btn-primary" value="ارسال">
                                </form>
                            </div>
                            <div class="socials">
                                <p>ما را در شبکه های اجتماعی دنبال کنید.</p>
                                <div class="footer-social">
                                    <a href="#" target="_blank"><i class="fa fa-instagram"></i>اینستاگرام</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="info">
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <span>@ViewBag.DescriptionCall</span>
                        </div>
                        <div class="col-12 col-lg-2">شماره تماس: @ViewBag.Phone</div>
                        <div class="col-12 col-lg-2">آدرس ایمیل:<a href="#">@ViewBag.Email</a></div>
                        <div class="col-12 col-lg-4 text-center">
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/bazzar.png" width="159" height="48"
                                     alt="">
                            </a>
                            <a href="#" target="_blank">
                                <img src="~/Content/assets/img/sibapp.png" width="159" height="48"
                                     alt="">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="description">
                <div class="container">
                    <div class="row">
                        <div class="site-description col-12 col-lg-7">
                            <h1 class="site-title">@ViewBag.SiteTitle</h1>
                            <p>
                                @Html.Raw(ViewBag.SiteDescription)
                            </p>
                        </div>
                        <div class="symbol col-12 col-lg-5">
                            <a href="#" target="_blank"><img src="~/Content/assets/img/symbol-01.png" alt=""></a>
                            <a href="#" target="_blank"><img src="~/Content/assets/img/symbol-02.png" alt=""></a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="copyright">
                <div class="container">
                    <p>
                        @ViewBag.Copyright
                    </p>
                </div>
            </div>
        </footer>
    </div>





    <!--   Core JS Files   -->
    <script src="~/Content/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
    <!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
    <script src="~/Content/assets/js/plugins/bootstrap-switch.js"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="~/Content/assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!--  Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker -->
    <script src="~/Content/assets/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>
    <!-- Share Library etc -->
    <script src="~/Content/assets/js/plugins/jquery.sharrre.js" type="text/javascript"></script>
    <!-- Control Center for Now Ui Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/Content/assets/js/now-ui-kit.js" type="text/javascript"></script>
    <!--  CountDown -->
    <script src="~/Content/assets/js/plugins/countdown.min.js" type="text/javascript"></script>
    <!--  Plugin for Sliders -->
    <script src="~/Content/assets/js/plugins/owl.carousel.min.js" type="text/javascript"></script>
    <!--  Jquery easing -->
    <script src="~/Content/assets/js/plugins/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <!-- Main Js -->

    @RenderSection("Scripts", required: false)
    <script src="~/Content/assets/js/main.js" type="text/javascript"></script>

</body>
</html>
