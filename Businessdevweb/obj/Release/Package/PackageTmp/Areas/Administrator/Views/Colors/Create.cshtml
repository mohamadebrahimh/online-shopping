@model Businessdevweb.Areas.Administrator.Models.CreateColorViewModel
@{
    ViewBag.Title = "افزودن رنگ";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--6-col mdl-color--white " style="margin:0 auto">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mdl-cell mdl-cell--12-col mdl-typography--text-center ">

                    </div>
                            @Html.ValidationSummary(true, "", new { @class = "mdl-color-text--red" })


                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Name" })

                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "mdl-textfield__input" } })

                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "mdl-textfield__error" })
                            </div>

                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col ">
                                @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Value" })

                                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "mdl-textfield__input" ,type="color"} })
                                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "mdl-textfield__error" })

                            </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="افزودن رنگ" class="btn btn-default" />
                                        </div>
                                    </div>

                }
            </div>
        </div>



        <div>
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    </div>
</div>

@section scripts{
    @* این کد برای نمایش اخطار است *@
    <script>
        var items = document.querySelectorAll(".mdl-textfield__input")
        for (var i = 0; i < items.length; i++) {

            if (items.item(i).classList.contains('input-validation-error')) {
                items.item(i).parentElement.classList.add('is-invalid');
            } else {
                items.item(i).parentElement.classList.remove('is-invalid');
            }
        }

    </script>
}