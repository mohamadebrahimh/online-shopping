@model Businessdevweb.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "تغییر کلمه عبور";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "mdl-grid", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="mdl-cell mdl-cell--12-col mdl-color--grey-50">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                <h4>آیا می خواهید کلمه عبور خود را تغییر دهید؟</h4>
                <h6 class="mdl-color-text--red">برای تعیین کلمه عبور امن باید از حروف بزرگ، کوچک، کاراکتر خاص و اعداد استفاده نماید و تعداد حروف حداقل 6 کاراکتر باشد.</h6>
                <hr />
            </div>

            @Html.ValidationSummary("", new { @class = "mdl-color-text--red" })
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">

                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "OldPassword" })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "mdl-textfield__error" })

            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">

                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "NewPassword" })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "mdl-textfield__error" })

            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">

                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "ConfirmPassword" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "mdl-textfield__error" })

            </div>

            <div class="mdl-cell mdl-cell--12-col">
                <input type="submit" value="تایید" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored " />
                <a href='@(Url.Action("Index"))' class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent ">بازگشت </a>
            </div>
        </div>
    </div>

}
@section Scripts {
   
}