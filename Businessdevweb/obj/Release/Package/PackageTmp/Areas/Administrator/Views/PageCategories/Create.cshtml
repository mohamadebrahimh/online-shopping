@model Businessdevweb.Models.PageCategory

@{
    ViewBag.Title = "افزودن دسته";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mdl-cell mdl-cell--12-col mdl-typography--text-center ">
                        @Html.ValidationSummary(true, "", new { @class = "mdl-color-text--red" })
                    </div>
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Title" })
                                <div class="mdl-badge mdl-badge-counter" for="Title">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "mdl-textfield__error" })
                            </div>

                                <div class="mdl-cell mdl-cell--12-col ">
                                    @Html.LabelFor(model => model.Description)

                                    @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor" })


                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col ">
                                    @Html.LabelFor(model => model.MetaDescription, htmlAttributes: new { @class = "mdl-textfield__label", @for = "MetaDescription" })

                                    <div class="mdl-badge mdl-badge-counter" for="MetaDescription">
                                        @Html.TextAreaFor(model => model.MetaDescription, new { @class = "mdl-textfield__input" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "mdl-textfield__error" })

                                </div>

                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col">
                                        @Html.LabelFor(model => model.MetaKeyWord, htmlAttributes: new { @class = "mdl-textfield__label", @for = "MetaKeyWord" })

                                        <div class="mdl-badge mdl-badge-counter" for="MetaKeyWord">
                                            @Html.TextAreaFor(model => model.MetaKeyWord, new { @class = "mdl-textfield__input" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.MetaKeyWord, "", new { @class = "mdl-textfield__error" })

                                    </div>

                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col">
                                        @Html.LabelFor(model => model.Index, htmlAttributes: new { @class = "mdl-textfield__label", @for = "Index" })

                                        @Html.EditorFor(model => model.Index, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                                        @Html.ValidationMessageFor(model => model.Index, "", new { @class = "mdl-textfield__error" })

                                    </div>
                                    <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-cell mdl-cell--12-col mdl-cell--6-col-desktop" for="IsEndChild">
                                        @Html.CheckBoxFor(model => model.IsEndChild, new { @class = "mdl-checkbox__input", id = "IsEndChild" })
                                        <span class="mdl-checkbox__label">
                                            @Html.DisplayNameFor(model => model.IsEndChild)
                                        </span>
                                    </label>


                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col ">
                                        @Html.DropDownList("ParentId", null, "انتخاب گزینه مورد نظر", new { @class = "mdl-textfield__input" })
                                        @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "mdl-textfield__error" })

                                    </div>

                                    <div class="mdl-cell mdl-cell--12-col">
                                        <input type="submit" value="ذخیره" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored " />
                                        <a href='@(Url.Action("Index"))' class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent ">بازگشت </a>
                                    </div>

                }
            </div>
        </div>

    </div>
</div>
@section scripts{

    <script src="~/Scripts/ckeditor/ckeditor.js"></script>

}