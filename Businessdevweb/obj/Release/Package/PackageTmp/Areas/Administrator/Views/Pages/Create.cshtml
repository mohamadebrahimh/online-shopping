@model Businessdevweb.Models.Page
@{
    ViewBag.Title = "افزودن صفحه";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
            <div class="mdl-grid mdl-grid--no-spacing">
                <div class="mdl-cell mdl-cell--12-col mdl-color-text--black mdl-color--grey-50" style="margin:0 auto">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-typography--text-center ">
                            @Html.ValidationSummary(true, "", new { @class = "mdl-color-text--red" })
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "mdl-textfield__label", @for = "Title" })
                            <div class="mdl-badge mdl-badge-counter" for="Title">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "mdl-textfield__error" })
                        </div>

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
                            @Html.LabelFor(model => model.Brief, htmlAttributes: new { @class = "mdl-textfield__label", @for = "Brief" })
                            @Html.TextAreaFor(model => model.Brief, new { @class = "mdl-textfield__input" })
                        </div>
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-cell mdl-cell--12-col" for="IsContinue">
                            @Html.CheckBoxFor(model => model.IsContinue, new { @class = "mdl-checkbox__input", id = "IsContinue" })
                            <span class="mdl-checkbox__label">
                                @Html.DisplayNameFor(model => model.IsContinue)
                            </span>
                        </label>
                        <div class="mdl-cell mdl-cell--12-col ">
                            @Html.LabelFor(model => model.Content)
                            @Html.TextAreaFor(model => model.Content, new { @class = "ckeditor" })
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col ">
                            @Html.LabelFor(model => model.MetaDescription, htmlAttributes: new { @class = "mdl-textfield__label", @for = "MetaDescription" })
                            <div class="mdl-badge mdl-badge-counter" for="MetaDescription">
                                @Html.TextAreaFor(model => model.MetaDescription, new { @class = "mdl-textfield__input" })
                            </div>
                            @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "mdl-textfield__error" })
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col">
                            @Html.LabelFor(model => model.MetaKeyword, htmlAttributes: new { @class = "mdl-textfield__label", @for = "MetaKeyword" })
                            <div class="mdl-badge mdl-badge-counter" for="MetaKeyword">
                                @Html.TextAreaFor(model => model.MetaKeyword, new { @class = "mdl-textfield__input" })
                            </div>
                            @Html.ValidationMessageFor(model => model.MetaKeyword, "", new { @class = "mdl-textfield__error" })
                        </div>

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-cell mdl-cell--12-col ">
                            @Html.LabelFor(model => model.PageCategoryId, htmlAttributes: new { @class = "mdl-textfield__label", @for = "PageCategoryId" })

                            @Html.DropDownListFor(model => model.PageCategoryId,null, "", new { @class = "mdl-textfield__input" })
                            @Html.ValidationMessageFor(model => model.PageCategoryId, "", new { @class = "mdl-textfield__error" })

                        </div>
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-phone mdl-cell--4-col-tablet" for="IsDisplayedPage">
                            @Html.CheckBoxFor(model => model.IsDisplayedPage, new { @class = "mdl-checkbox__input", id = "IsDisplayedPage" })
                            <span class="mdl-checkbox__label">
                                @Html.DisplayNameFor(model => model.IsDisplayedPage)
                            </span>
                        </label>
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-cell mdl-cell--6-col-desktop mdl-cell--12-col-phone mdl-cell--4-col-tablet" for="IsAttachedToBanner">
                            @Html.CheckBoxFor(model => model.IsAttachedToBanner, new { @class = "mdl-checkbox__input", id = "IsAttachedToBanner" })
                            <span class="mdl-checkbox__label">
                                @Html.DisplayNameFor(model => model.IsAttachedToBanner)
                            </span>
                        </label>
                        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-cell mdl-cell--12-col" for="IsActive">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "mdl-checkbox__input", id = "IsActive" })
                            <span class="mdl-checkbox__label">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </span>
                        </label>
                        <div class="mdl-cell mdl-cell--12-col">
                            <input type="submit" value="ذخیره" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored " />
                            <a href='@(Url.Action("Index"))' class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent ">بازگشت </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{

    <script src="~/Scripts/ckeditor/ckeditor.js"></script>

}

