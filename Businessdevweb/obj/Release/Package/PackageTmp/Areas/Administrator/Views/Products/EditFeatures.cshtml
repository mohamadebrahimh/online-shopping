@model Businessdevweb.Areas.Administrator.Models.EditFeaturesViewModel
   @{ 
       ViewBag.Title = "ویرایش خصوصیات محصول";
       Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
   }

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
            @using (Html.BeginForm())
            {
                <div class="mdl-grid mdl-color--grey-50">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
            @Html.LabelFor(model => model.Group, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Group" })

            @Html.EditorFor(model => model.Group, new { htmlAttributes = new { @class = "mdl-textfield__input" } })

            @Html.ValidationMessageFor(model => model.Group, "", new { @class = "mdl-textfield__error" })
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Name" })

            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "mdl-textfield__input" } })

            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "mdl-textfield__error" })
        </div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col ">
            @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "mdl-textfield__label ", @for = "Value" })

            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "mdl-textfield__input" } })

            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "mdl-textfield__error" })
        </div>
        <div class="mdl-cell mdl-cell--12-col">
            <button type="submit" class="mdl-button mdl-js-button mdl-button--colored">ذخیره</button>
            <a href='@(Url.Action("ProductFeatures",new { id = Model.ProductId }))' class="mdl-button mdl-js-button mdl-button--colored">بازگشت</a>
        </div>
    </div>
            }
       
    </div>
</div>


        
    