<script>
    var slid = 6;
    if (window.innerWidth > 1024) {
        slid = 6;
    } else if (window.innerWidth > 920) {
        slid = 5;

    } else if (window.innerWidth > 712 ) {
        slid = 4;
    } else if (window.innerWidth > 508) {
        slid = 3;
    } else if (window.innerWidth < 508) {
        slid = 2;
    } else if (window.innerWidth <=404) {
        slid = 1;
    }

    $('.autoplayProduct').slick({
        
                dots: false,
                infinite: true,
                slidesToShow: slid,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 4000,
                rtl: true,

            });
</script>
