@model Businessdevweb.Models.LoginViewModel
@{
    ViewBag.Titlelogin = "ورود";
}
<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="mdl-card mdl-shadow--2dp" style="margin:0 auto;vertical-align:middle">
            <div class="mdl-card__title mdl-color--primary">
                <h2 class="mdl-card__title-text mdl-color-text--white">@ViewBag.Titlelogin</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-grid">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { }))
            {
                    @Html.AntiForgeryToken()

                    <b class="mdl-color-text--red">@Html.ValidationSummary(true, "", new { })</b>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        @Html.LabelFor(m => m.Email, new { @class = "mdl-textfield__label mdl-color-text--grey", @for = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "mdl-color-text--red-500 mdl mdl-textfield__label", @for = "Email" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input", @type = "email" })


                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        @Html.LabelFor(m => m.Password, new { @class = "mdl-textfield__label mdl-color-text--grey", @for = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "mdl-color-text--red-500 mdl mdl-textfield__label", @for = "Password" })
                        @Html.TextBoxFor(m => m.Password, new { @class = "mdl-textfield__input", @type = "password" })


                    </div>

                    <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="RememberMe">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "mdl-checkbox__input" })
                        <span class="mdl-checkbox__label">@Html.DisplayNameFor(m => m.RememberMe)</span>
                    </label>


                    <div class="mdl-cell mdl-cell--12-col send-button" align="center">

                        <button type="submit" class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--raised mdl-button--colored mdl-color--primary">
                            ورود
                        </button>
                        <a href="#close" class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--raised mdl-button--colored mdl-color--accent">انصراف </a>
                    </div>
                }
            </div>

        </div>
    </div>

</div>
