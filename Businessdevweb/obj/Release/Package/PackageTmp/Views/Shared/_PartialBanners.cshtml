@using Businessdevweb.Models
    @model List<BannerSlider>
@if (Model.Count > 0)
{
    <div class="mdl-grid mdl-grid--no-spacing">
        <div class="mdl-cell mdl-cell--12-col autoplay mdl-color--grey-100">
            @foreach (var item in Model)
            {
                var rnd = new Random();
                var img = item.SelectedImages[rnd.Next(0, item.SelectedImages.Count - 1)].Image;
                        
                            <a href="~/Pages/@(item.Page.Code.ToString()+"/"+item.Page.Name)">
                    <picture>
                        <!--<source srcset="Content/GoldLogo.png" media="(max-width: 1024px) ">-->
                        <source srcset="@(img.Path + "desktop/" + img.Name+img.Ext)" media="(min-width: 1025px)">
                        <source srcset="@(img.Path + "tablet/" + img.Name+img.Ext)" media="(min-width: 768px) ">
                        <source srcset="@(img.Path + "phone/" + img.Name+img.Ext)" media="(min-width: 180px)">
                        <img src="" style="width:100%;height:auto" alt="@img.Alt" title="@img.Title" />
                    </picture>
                            </a>
                
            }


        </div>
    </div>
}